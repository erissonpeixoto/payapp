<% unless notice.nil? %>
  <div class="row">
    <div class="col s12 m12">
      <div class="card-panel green accent-2">
        <span id="notice" class="black-text">
          <i class="material-icons">check</i>
          <%= notice %>
        </span>
      </div>
    </div>
  </div>
<% end %>

<p>
  <strong>Nome:</strong>
  <%= @category.name %>
</p>


<%= link_to 'Editar', edit_category_path(@category), class: 'waves-effect waves-light btn blue-grey' %> |
<%= link_to 'Voltar', categories_path, class: 'waves-effect waves-light btn blue-grey' %>
