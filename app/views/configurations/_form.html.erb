<%= form_for(configuration) do |f| %>
  <% if configuration.errors.any? %>
    <div class="row">
      <div class="col s12 m12">
        <div class="card-panel red">
          <span id="notice" class="white-text">
            <i class="material-icons">error</i>
            <%= pluralize(configuration.errors.count, "erro(s)") %> Não foi possível salvar:
            <ul>
              <% configuration.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </span>
        </div>
      </div>
    </div>
  <% end %>  

  <div class="row">
    <div class="field col s12 m6">
      <%= f.label :salary, class: 'active' %>
      <%= f.number_field :salary, step: :any %>
    </div>
  </div>    

  <br>
  
  <div class="actions">
    <button class="btn waves-effect waves-light" type="submit" name="action">
      Salvar<i class="material-icons right">save</i>
    </button>
  </div>
  
  <br>
<% end %>
