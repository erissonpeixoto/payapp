<h4>Dashboard</h4>
<% unless notice.nil? %>
  <div class="row">
    <div class="col s12 m12">
      <div class="card-panel green accent-2">
        <span id="notice" class="black-text">
          <i class="material-icons">check</i>
          <%= notice %>
        </span>
      </div>
    </div>
  </div>
<% end %>

<% unless alert.nil? %>
  <div class="row">
    <div class="col s12 m12">
      <div class="card-panel red">
        <span id="alert" class="white-text">
          <i class="material-icons">error</i>
          <%= alert %>
        </span>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="field col s12 m6">
    <%= pie_chart @chart_pay_and_balance, colors: @color_chart_pay_and_balance, label: "Valor", prefix: "R$ ", thousands: ".", decimal: ",", library: {
        title: {text: 'Saldo do Mês atual'},
        plotOptions: {
          pie: {
            dataLabels: {
              enabled: false
            },
            showInLegend: true
          }
        }
      } %>
  </div>
  <div class="field col s12 m6">
    <%= column_chart @payment_of_expenses_by_category, label: "Valor", prefix: "R$ ", thousands: ".", decimal: ",", library: {
      title: {text: 'Pg. de Despesas por Categoria do Mês atual'},
      tooltip: {
        pointFormat: 'Valor: <b>{point.y:.2f}</b>'
      },
      yAxis: {
        title: {
            text: 'Valor Pago',
        }
      },
      xAxis: {
        title: {
            text: 'Categoria da Despesa'
        }
      }
    }%>
  </div>
</div>

<div class="row">
  <div class="field col s12 m12">
    <%= line_chart @total_value_by_payment, label: "Valor", prefix: "R$ ", thousands: ".", decimal: ",", library: {
      title: {text: 'Valor Pago por Mês'},
      tooltip: {
        pointFormat: 'Valor: <b>{point.y:.2f}</b>'
      },
      yAxis: {
        title: {
            text: 'Valor Pago',
        }
      },
      xAxis: {
        title: {
            text: 'Mês'
        }
      }
    }%>
  </div>
</div>

