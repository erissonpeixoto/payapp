<% unless notice.nil? %>
  <div class="row">
    <div class="col s12 m12">
      <div class="card-panel green accent-2">
        <span id="notice" class="black-text">
          <i class="material-icons">check</i>
          <%= notice %>
        </span>
      </div>
    </div>
  </div>
<% end %>

<h4>Configurações</h4>

<% unless alert.nil? %>
  <div class="row">
    <div class="col s12 m12">
      <div class="card-panel red">
        <span id="alert" class="white-text">
          <i class="material-icons">error</i>
          <%= alert %>
        </span>
      </div>
    </div>
  </div>
<% end %>

<% if @configurations.any? %>
  <table class="striped">
    <thead>
      <tr>
        <th width="75%">Salário</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @configurations.each do |configuration| %>
        <tr>
          <td><%= number_to_currency(configuration.salary, unit: "R$ ", separator: ",", delimiter: ".") %></td>
          <td><%= link_to configuration, class: 'btn-floating btn-small waves-effect waves-light blue' do %>
                <i class="material-icons">pageview</i>
              <% end %>
          </td>
          <td><%= link_to edit_configuration_path(configuration), class: 'btn-floating btn-small waves-effect waves-light green' do %>
                <i class="material-icons">edit</i>
              <% end %>
          </td>
          <td><%= link_to configuration, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn-floating btn-small waves-effect waves-light red' do %>
                <i class="material-icons">delete</i>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h6 class="header red-text text-lighten-1 center-align">Não há registros para mostrar</h6>
<% end %>

<br>

<% unless @configurations.any? %>
  <%= link_to 'Nova Configuração', new_configuration_path, class: 'waves-effect waves-light btn' %>
<% end %>  
