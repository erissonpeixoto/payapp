<% unless notice.nil? %>
  <div class="row">
    <div class="col s12 m12">
      <div class="card-panel green accent-2">
        <span id="notice" class="black-text">
          <i class="material-icons">check</i>
          <%= notice %>
        </span>
      </div>
    </div>
  </div>
<% end %>

<h4>Receitas</h4>

<% unless alert.nil? %>
  <div class="row">
    <div class="col s12 m12">
      <div class="card-panel red">
        <span id="alert" class="white-text">
          <i class="material-icons">error</i>
          <%= alert %>
        </span>
      </div>
    </div>
  </div>
<% end %>

<% if @revenues.any? %>
  <table class="striped">
    <thead>
      <tr>
        <th width="45%">Nome</th>
        <th width="15%">Fixa?</th>
        <th width="20%">Categoria</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @revenues.each do |revenue| %>
        <tr>
          <td><%= revenue.name %></td>
          <td><%= badges_boolean(revenue.fixed) %></td>
          <td><%= revenue.try(:category).try(:name) %></td>
          <td><%= link_to revenue, class: 'btn-floating btn-small waves-effect waves-light blue' do %>
                <i class="material-icons">pageview</i>
              <% end %>
          </td>
          <td><%= link_to edit_revenue_path(revenue), class: 'btn-floating btn-small waves-effect waves-light green' do %>
                <i class="material-icons">edit</i>
              <% end %>
          </td>
          <td><%= link_to revenue, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn-floating btn-small waves-effect waves-light red' do %>
                <i class="material-icons">delete</i>
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <h6 class="header red-text text-lighten-1 center-align">Não há registros para mostrar</h6>
<% end %>

<div class="right"><h6><strong><%= "#{"Total de registros: " + @revenues.count.to_s}" %></strong></h6></div>

<%= will_paginate @revenues %>

<br>

<%= link_to 'Nova Receita', new_revenue_path, class: 'waves-effect waves-light btn' %>
